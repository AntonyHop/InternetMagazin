@model InternetMagazine.Models.RegistViewModel

@{
    ViewBag.Title = "Регистрация";
}

<h2>Регистрация</h2>

<div class="container body-content">
    <div class="row d-flex flex-row justify-content-center">
        <div class="col-md-6 form-signin mb-lg-1 mt-lg-1">
            <form method="post" class="ValidThisForm">
                @Html.AntiForgeryToken()


                @Html.ValidationSummary(true)

                <div class="form-label-group mb-2">
                    @Html.LabelFor(model => model.FirstName)
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LastName)
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NickName)
                    @Html.EditorFor(model => model.NickName, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password)
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ConfirmPassword)
                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Mobule)
                    @Html.EditorFor(model => model.Mobule, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Address)
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                </div>




                <div class="form-group d-flex flex-row justify-content-center mt-4">
                    <input type="button" value="Зарегистрировать" class="btn btn-lg btn-primary submiThis" />
                </div>

            </form>
        </div>
    </div>
</div>
